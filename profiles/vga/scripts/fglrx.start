modprobe uvesafb > /dev/null 2>&1
modprobe ${1} || die "Failed to insert ${1} kernel module"

[[ $(eselect opengl show) != ati ]] && eselect opengl set ati
[[ $(eselect xvmc   show) != ati ]] && eselect xvmc   set ati

